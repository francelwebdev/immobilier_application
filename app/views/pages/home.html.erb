<div class="jumbotron jumbotron-fluid d-flex align-items-center mb-0 jumbotron-accueil aos-item" data-aos="fade">
    <div class="container">
        <h1 class="display-4 text-white text-center">Bienvenue sur <span class="font-weight-bold">SICO</span></h1>
        <p class="lead text-white text-center">Trouver le bien immobilier qui correspond à vos besoins sans perdre le temps à visiter plusieurs.</p>
        <div class="row" >
            <div class="col-lg-12 py-3" style="border-radius: 3px; background-color: rgba(0, 0, 0, 0.3)">
                <%= render "shareds/property_search_form_in_home_page" %>
            </div>
        </div>
    </div>
</div>


<section class="container-fluid py-5 sr-only">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center mb-5">
                <h3>Annonces en vedette</h3>
            </div>
            <div class="col-12">
                <div class="row annonce_nouvellement_publié">
                    <div class="col-12 col-md-4 mx-1">
                        <div class="card mb-4">
                            <img class="card-img-top" src="https://picsum.photos/200/150/?random" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-text">Appartement</h5>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                    </div>
