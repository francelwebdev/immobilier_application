<% content_for :page_title, "Accueil" %>
<% content_for :page_meta_description, "Accueil - SICO - Annonces immobilieres au Bénin" %>
<% content_for :page_meta_keywords, "" %>
<% content_for :Morphext do %>
<script>
$("#js-rotating").Morphext({
    animation: "bounceIn", // Overrides default "bounceIn"
    speed: 3000, // Overrides default 2000
    complete: function () {
        // Overrides default empty function
    }
});
</script>
<% end%>

<div class="jumbotron jumbotron-fluid d-flex align-items-center mb-0 jumbotron-accueil">
    <div class="container">
        <h1 class="text-white text-center mb-3">Trouver <span id="js-rotating" class="font-weight-bold">une maison, un appartement, un bureau, une boutique, une villa, une chambre, un entrée couché, un magasin</span> a louer sans aucun difficulté.</h1>
        <div class="py-3 px-3" style="border-radius: 3px; background-color: rgba(0, 0, 0, 0.3)">
            <%= simple_form_for "", url: properties_path, method: :get do |f| %>
            <div class="row px-3">
                <div class="col-lg-3 px-1 mb-2">
                    <%= f.input :property_type, collection: ["Appartement", "Maison", "Bureau", "Commerce", "Villa", "Chambre", "Entrée couché"], prompt: "Type de bien", label: false, input_html: { class: "form-control form-control-lg" }, wrapper_html: { class: "m-0" } %>
                </div>
                <div class="col-lg-3 px-1 mb-2">
                    <%= f.input :ad_type, collection: ["Location"], prompt: "Type d'annonce", label: false, input_html: { class: "form-control form-control-lg" }, wrapper_html: { class: "m-0" } %>
                </div>
                <div class="col-lg-4 px-1 mb-2">
                    <%= f.input :city, placeholder: "Ou ? Zogbo, Fifadji, Fidjrossè ?", label: false, input_html: { class: "form-control form-control-lg", autocomplete: true }, wrapper_html: { class: "m-0" } %>
                </div>
                <div class="col-lg-2 px-1 mb-2">
                    <%= f.button :submit, "Rechercher", name: nil, class: 'btn btn-primary btn-block btn-lg' %>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>


