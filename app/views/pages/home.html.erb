<% content_for :page_title, "Annonces immobiliers au Bénin" %>
<% content_for :page_meta_description, "" %>
<% content_for :page_meta_keywords, "" %>
<% content_for :Morphext do %>
<script>
$(function() {
$("#js-rotating").Morphext({
    animation: "bounceIn", // Overrides default "bounceIn"
    speed: 5000, // Overrides default 2000
    complete: function () {
        // Overrides default empty function
    }
});
});
</script>
<% end%>

<div class="jumbotron jumbotron-fluid d-flex align-items-center mb-0 jumbotron-accueil py-5">
    <div class="container">
        <h1 class="text-white text-center mb-3">Trouver <span id="js-rotating" class="font-weight-bold">la maison, l'appartement, le bureau, la boutique, la villa, la chambre, le magasin, le parcelle, le terrain</span> de vos rêves sans aucune difficulté.</h1>
        <div class="py-3 px-3 rounded" style="background-color: rgba(0, 0, 0, 0.3)">
            <%= form_with url: properties_path, method: :get do |f| %>
            <div class="form-row">
                <div class="col-md-3 px-0 mb-2">
                    <%= f.collection_select :property_type, PropertyType.all, :name, :name, { prompt: "Type de bien" }, { class: "rounded-0 form-control form-control-lg" } %>
                </div>
                <div class="col-md-3 px-0 mb-2">
                    <%= f.collection_select :ad_type, AdType.all, :name, :name, { prompt: "Type d'annonce" }, { class: "rounded-0 form-control form-control-lg" } %>
                </div>
                <div class="col-md-4 px-0 mb-2">
                    <%= f.text_field :city, placeholder: "Ou ? Ex: Fidjrossè, Abomey-Calavi", class: "rounded-0 form-control form-control-lg" %>
                </div>
                <div class="col-md-2 px-0 mb-2">
                    <%= f.submit "Rechercher", class: "rounded-0 btn btn-primary btn-lg btn-block" %>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>


