<% content_for :page_title, "Annonces immobiliers au Bénin" %>
<% content_for :page_meta_description, "" %>
<% content_for :page_meta_keywords, "" %>
<% content_for :Morphext do %>
<script>
    $(function() {
        $("#js-rotating").Morphext({
    animation: "bounceIn", // Overrides default "bounceIn"
    speed: 3000, // Overrides default 2000
    complete: function () {
        // Overrides default empty function
    }
});
    });
</script>
<% end %>

<section class="section hero is-fullheight banner-accueil">
  <div class="hero-body">
    <div class="container">
        <h1 class="title has-text-white has-text-centered">Devenir propriétaire est un beau et grand projet de vie.</h1>
        <h2 class="subtitle has-text-white has-text-centered">Trouvez <span id="js-rotating" class="font-weight-bold">la parcelle, le terrain, la maison, la villa, l'immeuble</span> dont vous rêvez et faites votre acquisition en toute sécurité.</h2>
        <%= form_with url: rechercher_un_bien_properties_path, method: :get, local: true do |f| %>
        <div class="columns">
            <div class="column is-3">
                <div class="field">
                    <div class="control is-expanded">
                        <div class="select is-fullwidth">
                            <%= f.select :property_type, PropertyType.all.collect {|p| [p.name, p.name]}, { prompt: "Sélectionner le type de bien"}, {required: true} %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column is-3">
                <div class="field">
                    <div class="control is-expanded">
                        <div class="select is-fullwidth">
                            <%= f.select :ad_type, AdType.all.collect {|p| [p.name, p.name]}, { prompt: "Sélectionner le type d'annonce"}, {required: true} %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column is-4">
                <div class="field">
                    <div class="control is-expanded">
                        <%= f.text_field :city, placeholder: "Ou ? Calavi, Allada, Zè, Parakou ...", class: "input is-fullwidth", required: true %>
                    </div>
                </div>
            </div>
            <div class="column is-2">
                <div class="field">
                    <div class="control is-expanded">
                        <%= f.submit "Rechercher", class: "button is-info is-fullwidth"%>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>
</section>





