<% content_for :page_title, "Contactez nous" %>

<section class="container-fluid py-5 contact-page-banner d-flex flex-column justify-content-center">
    <div class="container">
        <riv class="row">
            <div class="col-lg-12 text-center">
                <h1 class="text-white">Contact</h1>
            </div>
        </riv>
    </div>
</section>

<section class="container py-5">
    <div class="row py-3">
        <div class="col-lg-5">
            <h3 class="font-weight-bold mb-5">Contactez-nous</h3>
            <address >
                <div class="mb-4">
                    <h4>Adresse</h4>
                    <p>Cococodji, Bénin</p>
                </div>
                <div class="mb-4">
                    <h4>Téléphone</h4>
                    <p>96 61 90 73</p>
                </div>
                <div class="mb-4">
                    <h4>Email</h4>
                    <p>
                        <%= mail_to "francel.webdev@gmail.com", "francel.webdev@gmail.com", subject: "Demande d'information", class: "sans-text-decoration text-dark" %>
                    </p>
                </div>
            </address>
        </div>
        <div class="col-lg-7">
            <div class="card">
                <div class="card-body d-flex flex-column justify-content-center text-center p-0">

                	<div class="mapouter"><div class="gmap_canvas"><iframe width="600" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=cococodji%20benin&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.embedgooglemap.net"></a></div><style>.mapouter{text-align:right;height:500px;width:600px;}.gmap_canvas {overflow:hidden;background:none!important;height:500px;width:600px;}</style><small></small></div>

                    <h1 class="sr-only">Chargement de la carte.</h1>
                    <p class="sr-only"><%#= image_tag "ajax-loader.gif" %></p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="container-fluid bg-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h4 class="font-weight-bold mb-5">Ecrivez-nous</h4>
                <p>Vous avez une question, une demande ou un problème? Ecrivez-nous.</p>

                <%= simple_form_for @contact do |f| %>
                    <div class="form-row">
                        <div class="col-lg-6">
                            <%= f.input :first_name, required: true, label: "Prénom" %>
                        </div>
                        <div class="col-lg-6">
                            <%= f.input :last_name, required: true, label: "Nom" %>
                        </div>
                        <div class="col-lg-6">
                            <%= f.input :email, as: :email, required: true, label: "Adresse email" %>
                        </div>
                        <div class="col-lg-6">
                            <%= f.input :phone_number, as: :tel, required: true, label: "Numeros de téléphone" %>
                        </div>
                        <div class="col-lg-12">
                            <%= f.input :message, required: true, label: "Message", input_html: { rows: 5 } %>
                        </div>
                        <div class="form-actions form-row mt-4">
                            <div class="col-lg-12">
                                <%= f.submit "Envoyer", class: "btn btn-primary btn-lg" %>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</section>
