<% content_for :page_title, "Resultat de recherche"  %>

<section class="d-flex align-items-center mb-0 p-0 barre-recherche-avance">
    <div class="container">
        <div class="row bg-white py-3 mx-1" style="border-radius: 5px;">
            <div class="col-12">
                <%= render "shareds/property_search_form" %>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="row">
                    <div class="col-12 mb-4">
                        <div class="card bg-white border-0">
                            <div class="card-body">
                                <h5 class="text-dark bold mb-3">Type de bien</h5>
                                <ul class="list-unstyled">
                                    <% @property_types.each do |property_type| %>
                                    <li class="my-2">
                                        <%= link_to properties_path(property_type: property_type.name), class: "text-secondary" do %>
                                        <i class="fas fa-arrow-right"></i>&nbsp; <%= property_type.name %>
                                        <% end %>
                                    </li>
                                    <% end %>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 mb-4">
                        <div class="card bg-white border-0">
                            <div class="card-body">
                                <h5 class="text-dark mb-3">Type d'annonce</h5>
                                <ul class="list-unstyled">
                                    <% @ad_types.each do |ad_type| %>
                                    <li class="my-2">
                                        <%= link_to properties_path(ad_type: ad_type.name), class: "text-secondary" do %>
                                        <i class="fas fa-arrow-right"></i>&nbsp; <%= ad_type.name %>
                                        <% end %>
                                    </li>
                                    <% end %>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 mb-4">
                        <div class="card bg-white border-0">
                            <div class="card-body">
                                <h5 class="text-dark mb-3">Biens par Commune ou quartier</h5>
                                <ul class="list-unstyled">
                                    <li class="my-2">
                                        <%= link_to "", class: "text-secondary" do %>
                                        <i class="fas fa-arrow-right"></i>&nbsp; Cotonou
                                        <% end %>
                                    </li>
                                    <li class="my-2">
                                        <%= link_to "", class: "text-secondary" do %>
                                        <i class="fas fa-arrow-right"></i>&nbsp; Porto-Novo
                                        <% end %>
                                    </li>
                                    <li class="my-2">
                                        <%= link_to "", class: "text-secondary" do %>
                                        <i class="fas fa-arrow-right"></i>&nbsp; Abomey-Calavi
                                        <% end %>
                                    </li>
                                    <li class="my-2">
                                        <%= link_to "", class: "text-secondary" do %>
                                        <i class="fas fa-arrow-right"></i>&nbsp; Godomey
                                        <% end %>
                                    </li>
                                    <li class="my-2">
                                        <%= link_to "", class: "text-secondary" do %>
                                        <i class="fas fa-arrow-right"></i>&nbsp; Parakou
                                        <% end %>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <% if @properties.present? %>
            <section class="col-lg-8">
                <section class="row">
                    <div class="col-lg-12">
                        <p><%= pluralize(@properties_numbers, "annonce trouvé", "annonces trouvés") %></p>
                    </div>

                    <% @properties.each do |property| %>
                    <%# list design %>
                    <%= link_to property, class: "sans-text-decoration index-list-item mb-4" do %>
                    <div class="col-lg-12 pr-0 list-item">
                        <div class="card flex-md-row box-shadow h-md-250">
                            <%= image_tag property.property_photos.first.photo_url, class: "card-img-right flex-auto d-none d-lg-block", alt: "Photo de #{ property.title }" %>

                            <% if property.ad_type.name == "Vente" %>
                            <p class="h4">
                                <span class="position-absolute badge badge-secondary  h6 font-weiht-normal rounded-2" style="top: 15px; left: 0px;">A vendre</span>
                            </p>
                            <% elsif property.ad_type.name == "Location" %>
                            <p class="h4">
                                <span class="position-absolute badge badge-secondary h6 font-weiht-normal  rounded-0" style="top: 15px; left: 0px;">A louer</span>
                            </p>
                            <% end %>

                            <% if user_signed_in? and current_user.role == "Administrateur" %>
                            <% if property.published? %>
                            <p class="h4">
                                <span class="position-absolute badge badge-success p-2 rounded-0" style="top: 15px; left: 255px;">ONLINE</span>
                            </p>
                            <% else %>
                            <p class="h4">
                                <span class="position-absolute badge badge-danger p-2 rounded-0" style="top: 15px; left: 255px;">OFFLINE</span>
                            </p>
                            <% end%>
                            <% end %>

                            <div class="card-body d-flex flex-column align-items-start justify-content-between">
                                <h5 class="card-title text-dark">
                                    <%= truncate(strip_tags(property.title.capitalize), length: 25) %>
                                </h5>
                                <address class="card-text text-secondary mb-3">
                                    <i class="fas fa-map-marker-alt"></i>&nbsp; <%= property.address %>, <%= property.city %>
                                </address>
                                <% if property.ad_type.name == "Vente" %>
                                <p class="text-primary m-0 p-0 h3">
                                    <%= number_with_delimiter(sprintf("%0.00f", property.price)) %><sup>f</sup>
                                </p>
                                <% elsif property.ad_type.name == "Location" %>
                                <p class="text-primary m-0 p-0 h3">
                                    <%= number_with_delimiter(sprintf("%0.00f", property.price)) %><sup>f</sup>/<small>mois</small></sup>
                                </p>
                                <% end %>
                                <p class="m-0 text-secondary">
                                    <small>Publié le <%= property.created_at.strftime("%e %B") %></small>
                                    <small class="sr-only">Il y a <%= time_ago_in_words(property.created_at) %></small>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% end %>

                    <% end %>

                    <div class="col-12">
                        <p class="m-0"><%= paginate @properties, :theme => 'twitter-bootstrap' %></p>
                    </div>
                </section>
            </section>
            <% else %>
            <div class="col-lg-8">
                <div class="card bg-transparent border-0">
                    <p>Aucun résultat trouvé !</p>
                </div>
            </div>
            <% end %>

        </div>
    </div>
</section>
