<% content_for :page_title, "Resultat de recherche" %>
<% content_for :page_meta_description, "Accueil - SICO - Annonces immobilieres au Bénin" %>
<% content_for :page_meta_keywords, "Chambre a louer cotonou, Parcelle a vendre Benin, Appartement a louer cotonou, Boutique a louer cotonou" %>

<section class="d-flex align-items-center mb-0 p-0 barre-recherche-avance">
    <div class="w-75 m-auto">
        <div class="row">
            <div class="col-12">
                <h2 class="text-white">Affiner votre recherche</h2>
            </div>
            <div class="col-12 py-3" style="border-radius: 5px; background-color: rgba(0, 0, 0, 0.3) !important;">
                <%= simple_form_for "", url: properties_path, method: :get do |f| %>
                <div class="row px-3">
                    <div class="col-lg-3 px-1 mb-2">
                        <%= f.input :property_type, collection: ["Appartement", "Maison", "Bureau", "Commerce", "Villa", "Chambre", "Entrée couché"], prompt: "Type de bien", label: false, input_html: { class: "form-control form-control-lg" }, wrapper_html: { class: "m-0" } %>
                    </div>
                    <div class="col-lg-3 px-1 mb-2">
                        <%= f.input :ad_type, collection: Property::AD_TYPE, prompt: "Type d'annonce", label: false, input_html: { class: "form-control form-control-lg" }, wrapper_html: { class: "m-0" } %>
                    </div>
                    <div class="col-lg-6 px-1 mb-2">
                        <%= f.input :city, placeholder: "Ou ? Entrez le nom d'un quartier ou d'une ville", label: false, input_html: { class: "form-control form-control-lg" }, wrapper_html: { class: "m-0" } %>
                    </div>
                    <div class="col-lg-4 px-1 mb-2">
                        <%= f.input :room, collection: ["1 pièce", "2 pièces", "3 pièces", "4 pièces", "5 pièces", "plus de 5 pièces"], prompt: "Nombres de pièce", label: false, input_html: { class: "form-control form-control-lg" }, wrapper_html: { class: "m-0" } %>
                    </div>
                    <div class="col-lg-3 px-1 mb-2">
                        <%= f.input :price, as: :integer, placeholder: "Loyer ou prix max", label: false, input_html: { class: "form-control form-control-lg" }, wrapper_html: { class: "m-0" } %>
                    </div>
                    <div class="col-lg-3 px-1 mb-2">
                        <%= f.input :area, as: :integer, placeholder: "Surface min", label: false, input_html: { class: "form-control form-control-lg" }, wrapper_html: { class: "m-0" } %>
                    </div>
                    <div class="col-lg-2 px-1 mb-2">
                        <%= f.button :submit, "Rechercher", name: nil, class: 'btn btn-primary btn-block btn-lg' %>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</section>

<section class="py-5 w-75 m-auto">
    <div class="row">
        <div class="col-lg-4">
            <div class="row">
                <div class="col-12 mb-4">
                    <div class="card bg-white border-0">
                        <div class="card-body px-4">
                            <h5 class="mb-3 font-weight-bold">Type de bien</h5>
                            <ul class="list-unstyled">
                                <% @property_types.each do |property_type| %>
                                <li class="my-3">
                                   <%= link_to properties_path(property_type: property_type), class: "text-dark d-flex justify-content-between" do %>
                                   <span><i class="fa fa-angle-right" aria-hidden="true"></i>&nbsp; <%= property_type %></span>
                                   <span class="bagde badge-primary badge-pill p-1 sr-only">ok</span>
                                   <% end %>
                               </li>
                               <% end %>
                           </ul>
                       </div>
                   </div>
               </div>

               <div class="col-12 mb-4">
                <div class="card bg-white border-0">
                    <div class="card-body px-4">
                        <h5 class="mb-3 font-weight-bold">Type d'annonce</h5>
                        <ul class="list-unstyled">
                            <% @ad_types.each do |ad_type| %>
                            <li class="my-3">
                                <%= link_to properties_path(ad_type: ad_type), class: "text-dark d-flex justify-content-between" do %>
                                <span><i class="fa fa-angle-right" aria-hidden="true"></i>&nbsp; <%=  ad_type %></span>
                                <span class="bagde badge-primary badge-pill p-1 sr-only">ok</span>
                                <% end %>
                            </li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-12 mb-4 sr-only">
                <div class="card bg-white border-0">
                    <div class="card-body px-4">
                        <h5 class="mb-3 font-weight-bold">Biens par Commune</h5>
                        <ul class="list-unstyled sr-only">
                            <li class="my-2">
                                <%= link_to "", class: "text-dark" do %>
                                <i class="fas fa-arrow-right"></i>&nbsp; Cotonou
                                <% end %>
                            </li>
                            <li class="my-2">
                                <%= link_to "", class: "text-dark" do %>
                                <i class="fas fa-arrow-right"></i>&nbsp; Porto-Novo
                                <% end %>
                            </li>
                            <li class="my-2">
                                <%= link_to "", class: "text-dark" do %>
                                <i class="fas fa-arrow-right"></i>&nbsp; Abomey-Calavi
                                <% end %>
                            </li>
                            <li class="my-2">
                                <%= link_to "", class: "text-dark" do %>
                                <i class="fas fa-arrow-right"></i>&nbsp; Godomey
                                <% end %>
                            </li>
                            <li class="my-2">
                                <%= link_to "", class: "text-dark" do %>
                                <i class="fas fa-arrow-right"></i>&nbsp; Parakou
                                <% end %>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <% if @properties.present? %>
    <section class="col-lg-8">
        <section class="row">
            <div class="col-lg-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <p class="mb-0"><%= pluralize(@properties_numbers, "annonce trouvé", "annonces trouvés") %></p>
                </div>
            </div>

            <% @properties.each do |property| %>
            <div class="col-lg-12 mb-4">
                <div class="card result_search_list_design shadow-sm">
                    <div class="row">
                        <div class="col-lg-5 pr-lg-0 d-flex flex-column justify-content-center align-items-center">
                            <% if property.ad_type == "À vendre" %>
                            <h5 class="position-absolute" style="top: 10px; left: 20px;">
                                <span class="badge badge-secondary p-2" >À vendre</span>
                            </h5>
                            <% elsif property.ad_type == "À louer" %>
                            <h5 class="position-absolute" style="top: 10px; left: 20px;">
                                <span class="badge badge-secondary p-2">À louer</span>
                                <% end %>
                            </h5>

                            <% if user_signed_in? %>
                            <% if current_user.admin? and property.published %>
                            <span class="position-absolute badge badge-success p-2" style="top: 10px; right: 20px;">En ligne</span>
                            <% elsif current_user.admin? and !property.published %>
                            <span class="position-absolute badge badge-danger p-2" style="top: 10px; right: 20px;">Hors ligne</span>
                            <% end %>
                            <% end %>

                            <% if property.images.attached? %>
                            <%= image_tag url_for(property.images.first), class: "w-100", alt: "#{property.title}", height: "221px" %>
                            <% else %>
                            <i class="fa fa-picture-o fa-5x" aria-hidden="true"></i>
                            <span>Annonce sans photo</span>
                            <% end %>
                        </div>
                        <div class="col-lg-7 pl-lg-0">
                            <div class="card-body">
                                <h5 class="card-title text-dark">
                                    <%= truncate(strip_tags(property.title.capitalize), length: 50) %>
                                </h5>
                                <address class="card-text text-secondary">
                                    <i class="fa fa-map-marker fa-lg" aria-hidden="true"></i>&nbsp; <%= property.address.capitalize %>, <%= property.city.capitalize %>
                                </address>
                                <% if property.ad_type == "À vendre" %>
                                <p class="text-primary h3">
                                    <%= number_to_currency(property.price, precision: 0) %>
                                </p>
                                <% elsif property.ad_type == "À louer" %>
                                <p class="text-primary h3">
                                    <%= number_to_currency(property.price, precision: 0) %>/mois
                                </p>
                                <% end %>
                            </div>
                            <div class="card-footer bg-white">
                                <p class="m-0 d-flex justify-content-between align-items-center">
                                    <small>Publié il y a <%= distance_of_time_in_words(property.created_at, Time.now, include_seconds: false) %></small>
                                    <%= link_to "Voir détails", property, class: "btn btn-primary" %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>

            <div class="col-12">
                <%= will_paginate @properties, previous_label: "Précédent ", next_label: " Suivant", container: false %>
            </div>
        </section>
    </section>
    <% else %>
    <section class="col-lg-8">
        <p>Aucun résultat trouvé !</p>
    </section>
    <% end %>

</div>
</section>
