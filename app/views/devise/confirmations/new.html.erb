

<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-6 is-offset-3">
        <div class="box">
          <h2 class="title has-text-centered"><%= t(".resend_confirmation_instructions") %></h2>
          <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>

          <% if resource.errors.any? %>
          <div class="notification is-danger">
            <%= f.error_notification %>
            <%= f.full_error :confirmation_token %>
          </div>
          <% end %>

          <div class="form-inputs">
            <div class="field">
              <div class="control">
                <%= f.input :email,
                required: true,
                autofocus: true,
                value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                input_html: { autocomplete: "email", class: "input" }, wrapper: false, label_html: {class: "label"} %>
              </div>
            </div>
          </div>

          <div class="form-actions">
            <div class="field">
              <div class="control has-text-centered">
                <%= f.button :submit, t(".resend_confirmation_instructions"), class: "button is-info" %>
              </div>
            </div>
          </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>