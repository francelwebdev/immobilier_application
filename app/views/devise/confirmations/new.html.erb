<% content_for :page_title, "Confimation de compte" %>

<section class="container py-5">
    <div class="row">
        <div class="col-lg-6 offset-lg-3 text-center mb-4">
            <h2><%= t(".resend_confirmation_instructions") %></h2>
        </div>
        <div class="col-lg-6 offset-lg-3">
            <div class="card border-0 mon-box-shadow">
                <div class="card-body px-5">
                    <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
                    <%= f.error_notification %>
                    <%= f.full_error :confirmation_token %>

                    <div class="form-inputs">
                        <%= f.input :email, required: true, autofocus: true %>
                    </div>

                    <div class="form-actions">
                        <%= f.button :submit, t(".resend_confirmation_instructions"), class: "btn btn-primary btn-block btn-lg" %>
                    </div>
                    <% end %>
                    <div class="text-center mt-4">
                        <%= render "devise/shared/links" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>