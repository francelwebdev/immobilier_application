<% content_for :page_title, "Confimation de compte" %>

<%= render "shareds/haut-page-confimations" %>

<section class="container-fluid py-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="card">
                    <div class="card-body">
                        <h2><%= t(".resend_confirmation_instructions") %></h2>

                        <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
                        <%= f.error_notification %>
                        <%= f.full_error :confirmation_token %>

                        <div class="form-inputs">
                            <%= f.input :email, required: true, autofocus: true %>
                        </div>

                        <div class="form-actions">
                            <%= f.button :submit, t(".resend_confirmation_instructions") %>
                        </div>
                        <% end %>

                        <%= render "devise/shared/links" %>

                        <% content_for :page_title, "Connexion utilisateur" %>

                        <%= render "shareds/haut-page-connexion" %>
                    <div>
                <div>
            <div>
        <div>
    <div>
<section>
