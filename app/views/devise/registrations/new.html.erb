

<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-6 is-offset-3">
       <div class="box">
        <h2 class="title has-text-centered"><%= t(".sign_up") %></h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
        <% if resource.errors.any? %>
        <div class="notification is-danger">
          <%= f.error_notification %>
        </div>
        <% end %>

        <div class="form-inputs">
          <div class="field">
            <div class="control">
              <%= f.input :name, required: true, autofocus: true, placeholder: "PrÃ©nom et Nom", wrapper: false, input_html: {class: "input"}, label_html: {class: "label"} %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :phone_number, as: :tel, required: true, wrapper: false, input_html: {class: "input"}, label_html: {class: "label"} %>
            </div>
          </div>

          <div class="field">
            <%= f.label :role, label_html: {class: "label"} %>
            <div class="control is-expanded">
              <div class="select is-fullwidth">
                <%= f.input :role, collection: User::ROLE, label: false, required: true, wrapper: false %>
              </div>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :email,
              required: true,
              input_html: { autocomplete: "email", class: "input" }, wrapper: false, label_html: {class: "label"} %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password,
              required: true,
              hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length),
              input_html: { autocomplete: "new-password", class: "input" }, wrapper: false, label_html: {class: "label"} %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password_confirmation,
              required: true,
              input_html: { autocomplete: "new-password", class: "input" }, wrapper: false, label_html: {class: "label"} %>
            </div>
          </div>
        </div>

        <div class="form-actions">
          <div class="field">
            <div class="control has-text-centered">
              <%= f.button :submit, t(".sign_up"), class: "button is-info" %>
            </div>
          </div> 
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
</section>