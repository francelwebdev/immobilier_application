<% content_for :page_title, "Inscription utilisateur" %>

<%= render "shareds/haut-page-inscription" %>

<section class="container-fluid py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="card">
                    <div class="card-body">
                      <h2 class="card-title text-center"><%= t(".sign_up") %></h2>
                      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= f.error_notification %>

                        <div class="form-inputs">
                          <%= f.input :first_name, required: true, label: "PrÃ©nom" %>
                          <%= f.input :last_name, required: true, label: "Nom" %>
                          <%= f.input :email, required: true %>
                          <%= f.input :password, required: true %>
                          <%= f.input :password_confirmation, required: true %>
                        </div>

                        <div class="form-actions">
                          <%= f.button :submit, t(".sign_up"), class: "btn btn-primary btn-block" %>
                        </div>
                      <% end %>

                      <div class="text-center mt-4">
                        <%= render "devise/shared/links" %>
                      </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
