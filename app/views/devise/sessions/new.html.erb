

<section class="section container">
    <div class="columns">
        <div class="column is-6 is-offset-3">
           <div class="box">
            <h2 class="title has-text-centered"><%= t('.sign_in') %></h2>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email, class: "label" %><!-- <br /> -->
              <div class="control">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
            </div>
        </div>

        <div class="field">
          <%= f.label :password, class: "label" %><!-- <br /> -->
          <div class="control">
            <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
        </div>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="field">
      <label for="user_remember_me" class="label">
          <%= f.check_box :remember_me %>
          Se souvenir de moi ?
      </label>
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
  </div>
  <% end -%>

  <div class="actions field">
    <div class="control has-text-centered">
      <%= f.submit t('.sign_in'), class: "button is-info" %>
  </div>
</div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
</div>
</section>

