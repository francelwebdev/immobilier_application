

<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-6 is-offset-3">
        <div class="box">
          <h2 class="title has-text-centered"><%= t(".sign_in") %></h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <div class="field">
              <div class="control">
                <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "input" }, wrapper: false, label_html: {class: "label"} %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "input" }, wrapper: false, label_html: {class: "label"} %>
              </div>
            </div>
            <label for="user_remember_me" class="label">
              <%= f.input :remember_me, wrapper: false, label: false, as: :boolean if devise_mapping.rememberable? %>
              Se souvenir de moi ?
            </label>
          </div>

          <div class="form-actions">
            <div class="field">
              <div class="control has-text-centered">
                <%= f.button :submit, t(".sign_in"), class: "button is-info" %>
              </div>
            </div>
          </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>