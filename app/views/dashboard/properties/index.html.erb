<% provide :page_title, "Mes annonces"  %>

<section class="container-fluid py-4" style="background-color: #FAFAFA;">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h3>Mes annonces</h3>
            </div>
        </div>
    </div>
</section>

<section class="container-fluid py-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <% if @my_ads.count > 1 %>
                    <p><%= @my_ads.count %> annonces publié</p>
                <% else %>
                    <p><%= @my_ads.count %> annonce publié</p>
                <% end %>
            </div>
            <div class="col-lg-10 offset-lg-1">
                <div class="card bg-primary py-4">
                    <div class="card-bory">
                    </div>
                </div>
            </div>

            <div class="col-lg-10 offset-lg-1">                
                <ul class="list-unstyled">
                    <% @my_ads.each do |my_ad| %>
                        <li class="row">
                            <div class="col-lg-3">
                                <%= image_tag my_ad.property_photos.first.photo_url, class: "card-img-top", alt: "Photo de lannonce : #{ my_ad.title }" %>
                            </div>
                            <div class="col-lg-6">
                                <h5>
                                    <%= truncate(strip_tags(my_ad.title.capitalize), length: 25) %>
                                </h5>
                                <address class="card-text text-muted">
                                    <i class="fas fa-map-marker-alt"></i>&nbsp; <%= property.address %>, <%= property.city %>
                                </address>
                                <% if property.ad_type.name == "A vendre" %>
                                    <p>
                                        <span><%= sprintf("%0.00f", property.price) %><sup>F</sup></span>
                                    </p>
                                <% elsif property.ad_type.name == "A louer" %>
                                    <p>
                                        <span>
                                            <%= sprintf("%0.00f", property.price) %><sup>F</sup><small>/mois</small>
                                        </span>
                                    </p>
                                <% end %>
                            </div>
                            <div class="col-lg-3">
                                <ul class="list-unstyled">
                                    <li><%= link_to "Voir", my_ad %></li>
                                    <li><%= link_to "Voir", edit_property_path(my_ad) %></li>
                                    <li><%= link_to 'Suprimer', my_ad, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                                </ul>
                            </div>
                        </li>
                        <hr>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
</section>