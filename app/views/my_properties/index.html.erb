<% content_for :page_title, "Mes biens" %>

<section class="container-fluid py-4" style="background-color: #FAFAFA;">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h4>Mes annonces</h4>
            </div>
        </div>
    </div>
</section>

<section class="container-fluid py-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <% if @my_properties.count > 1 %>
                <p><%= @my_properties.count %> annonces publié</p>
                <% else %>
                <p><%= @my_properties.count %> annonce publié</p>
                <% end %>
            </div>
            <div class="col-lg-10 offset-lg-1">
                <ul class="list-unstyled">
                    <% @my_properties.each do |my_property| %>
                    <li class="row">
                        <div class="col-lg-3">
                            <%= image_tag my_property.property_photos.first.photo_url, class: "img-fluid w-100 h-100", alt: "Photo de lannonce : #{ my_property.title }" %>
                        </div>
                        <div class="col-lg-6 py-3 d-flex flex-column justify-content-center">
                            <h5><%= truncate(strip_tags(my_property.title.capitalize), length: 25) %></h5>
                            <address class="">
                                <i class="fas fa-map-marker-alt"></i>&nbsp; <%= my_property.address %>, <%= my_property.city %>
                            </address>
                            <% if my_property.ad_type.name == "A vendre" %>
                            <p>
                                <span><%= sprintf("%0.00f", my_property.price) %><sup>F</sup></span>
                            </p>
                            <% elsif my_property.ad_type.name == "A louer" %>
                            <p>
                                <span><%= sprintf("%0.00f", my_property.price) %><sup>F</sup><small>/mois</small></span>
                            </p>
                            <% end %>
                        </div>
                        <div class="col-lg-3 d-flex justify-content-center align-items-center">
                            <ul class="nav flex-column text-center">
                              <li class="nav-item">
                                <%= link_to "Modifier", edit_property_path(my_property), class: "nav-link" %>
                              </li>
                              <li class="nav-item">
                                <%= link_to 'Supprimer', my_property, method: :delete, data: { confirm: 'Are you sure?' }, class: "nav-link" %>
                              </li>
                            </ul>
                        </div>
                    </li>
                    <hr>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
</section>
