<footer class="container-fluid pt-5 bg-white">
	<div class="container">
		<div class="row py-5">
			<div class="col-lg-5 my-3 my-lg-0">
				<h5 class="mb-3 text-uppercase font-weight-bold text-secondary"><i class="fas fa-home fa-lg"></i> Sico</h5>
				<p class="text-secondary">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima eligendi minus doloremque porro, accusamus odio!</p>
				<address>
					<ul class="nav flex-column">
						<li class="nav-item">
							<a href="" class="nav-link pl-0 py-1 text-secondary font-weight-bold">96 61 90 73</a>
						</li>
						<li class="nav-item">
							<%= mail_to "francel.webdev@gmail.com", subject: "Demande d'information", class: "nav-link pl-0 py-1 text-primary" do %>
							francel.webdev@gmail.com
							<% end %>
						</li>
					</ul>
				</address>
			</div>
			<div class="col-lg-2 my-3 my-lg-0">
				<h5 class="mb-3 font-weight-bold text-secondary">A propos</h5>
				<ul class="nav flex-column">
					<li class="nav-item">
						<%= link_to 'Qui sommes-nous', about_us_path, class: "nav-link pl-0 py-1 text-muted" %>
					</li>
					<li class="nav-item">
						<%= link_to 'Contacter-nous', contact_us_path, class: "nav-link pl-0 py-1 text-muted" %>
					</li>

					<li class="nav-item">
						<%= link_to "Carriere", root_path, class: "nav-link pl-0 py-1 text-muted" %>
					</li>
				</ul>
			</div>
			<div class="col-lg-2 my-3 my-lg-0">
				<h5 class="mb-3 font-weight-bold text-secondary">Liens utiles</h5>
				<ul class="nav flex-column">
                    <li class="nav-item">
                        <%= link_to "Services Pro", root_path, class: "nav-link pl-0 py-1 text-muted" %>
                    </li>
					<li class="nav-item">
						<%= link_to "Terms & conditions", root_path, class: "nav-link pl-0 py-1 text-muted" %>
					</li>
					<li class="nav-item">
						<%= link_to "FAQ", root_path, class: "nav-link pl-0 py-1 text-muted" %>
					</li>
					<li class="nav-item">
						<%= link_to "Blog", root_path, class: "nav-link pl-0 py-1 text-muted" %>
					</li>
				</ul>
			</div>
			<div class="col-lg-3 my-3 my-md-0">
				<h5 class="mb-3 font-weight-bold text-secondary">Newsletter</h5>
				<%= form_with url: root_path, method: :get do |f| %>
                    <div class="form-row">
                        <div class="col-lg-10 p-0">
                            <%= f.email_field :email, placeholder: "Adresse email", class: "form-control", style: "border-radius: 0px;"  %>
                        </div>
                        <div class="col-lg-2 p-0">
                            <%= f.submit "Me notifié", class: "btn btn-primary", style: "border-radius: 0px;"  %>
                        </div>
                    </div>
                    <% end %>
				<ul class="list-unstyled d-flex mt-4">
					<li class="mr-3">
						<%= link_to "https://facebook.com", class: "h-50 w-50 p-2", title: "Suivez-nous sur facebook" do %>
							<i class="fab fa-facebook-f fa-lg"></i>
						<% end %>
					</li>
                    <li>
						<%= link_to "https://facebook.com", class: "h-50 w-50 p-2", title: "Suivez-nous sur twitter" do %>
							<i class="fab fa-twitter fa-lg"></i>
						<% end %>
					</li>
				</ul>
			</div>
		</div>
		<div class="row">
			<div class="col-12">
				<hr>
			</div>
		</div>
		<div class="row py-3">
			<div class="col-12 text-center text-md-right">
				<p class="text-center text-muted">&copy; <%= Time.now.year %> Sico. Tous droit réservé.</p>
			</div>
		</div>
	</div>
</footer>
