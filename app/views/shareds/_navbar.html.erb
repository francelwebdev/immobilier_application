                <%= link_to "Toutes les annonces", properties_path, class: "nav-link" %>
            </li>
            <% AdType.all.each do |ad_type| %>
            <li class="nav-item mx-1">
                <%= link_to ad_type.name, search_properties_path(ad_type: ad_type.name), class: "nav-link" %>
            </li>
            <% end %>
